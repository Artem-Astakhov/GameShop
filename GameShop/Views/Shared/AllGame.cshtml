@model GameShop.Models.Game

    <div class="col-lg-4">
        <img class="img-thumbnail" src="@Model.Image" width="200" height="200" alt=" @Model.Name" />
        <h4><a class="navbar-text text-dark" asp-controller="Game" asp-action="GamePage" asp-route-id="@Model.GameId">@Model.Name</a></h4>
        <h6>@Model.ShortDescription</h6>
        <p>Цена: @Model.Prise.ToString("c")</p>
        <p><a class="btn btn-warning" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@Model.GameId">Добавить в корзину</a></p>
        
    </div>